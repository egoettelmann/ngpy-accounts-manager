server {
  listen 80;
  server_name frontend;

  location /api/ {
    proxy_pass ${API_TARGET_HOST};
  }

  location / {
    root /usr/share/nginx/html;
    rewrite ^/assets/config/application\.json$ /assets/config/application-${NGINX_PROFILE}.json break;
    rewrite ^/assets/config/application-(.*)\.json$ /404 break;
    try_files $uri /index.html;
  }

}
